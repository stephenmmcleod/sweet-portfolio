= form.text_field :title
- if @photo.image? && @photo.id.present? && defined?(ComfortableMexicanSofa)
  = form.label 'Current Image'
  %br/
  = image_tag(@photo.image.url(:full))
  %br/
  %br/
  = link_to 'Crop Image', crop_admin_gallery_gallery_photo_path(@gallery, @photo), :class => "btn btn-default" if @photo.force_aspect?
  %br/
  %br/
= form.file_field :image, :multiple => @photo.new_record?
= form.text_area :description, :"data-rich-text" => "true"
= form.text_area :embed_code, :class => 'short'

.form-actions
  = form.submit 'Save', :class => 'btn btn-primary'
  = link_to "Cancel", admin_gallery_gallery_photos_path(params[:gallery_id]), :class => "btn btn-link"